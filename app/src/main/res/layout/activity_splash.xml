<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SplashActivity">

    <com.flaviofaria.kenburnsview.KenBurnsView
        android:id="@+id/splash_bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        tools:src="@drawable/splash_bg" />

    <TextView
        android:id="@+id/splash_app_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_26"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/splash_app_slogan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="开启Android之旅"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_16" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/splash_logo_img"
        android:layout_width="@dimen/spacing_72"
        android:layout_height="@dimen/spacing_72"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/logo" />
</RelativeLayout>
