<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/spacing_4"
    android:layout_marginStart="@dimen/spacing_4"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/spacing_2"
    card_view:cardElevation="@dimen/spacing_2"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/spacing_8"
        android:paddingLeft="@dimen/spacing_8"
        android:paddingTop="@dimen/spacing_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_head"
                android:layout_width="@dimen/spacing_32"
                android:layout_height="@dimen/spacing_32"
                android:src="@mipmap/ic_person_logo1" />

            <TextView
                android:id="@+id/item_author"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_16"
                android:layout_weight="1"
                android:text="v1ncent"
                android:textColor="@color/text_black"
                android:textSize="@dimen/font_18" />

            <TextView
                android:id="@+id/item_time"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_16"
                android:paddingRight="@dimen/spacing_8"
                android:text="10小时前"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_content"
            style="@style/TextAppearance.AppCompat.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8"
            android:paddingRight="@dimen/spacing_8"
            android:text="打造一款极致体验的wanandroid客户端 Awesome-WanAndroid"
            android:textColor="@color/text_black"
            android:textSize="@dimen/font_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_8"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/item_category_img"
                android:layout_width="@dimen/spacing_18"
                android:layout_height="@dimen/spacing_18"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@mipmap/item_index_category" />

            <TextView
                android:id="@+id/item_category"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/spacing_8"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:paddingRight="@dimen/spacing_8"
                android:text="TextView"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/font_15"
                android:textStyle="bold|italic" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

            <ImageView
                android:id="@+id/item_collect"
                android:layout_width="@dimen/spacing_24"
                android:layout_height="@dimen/spacing_24"
                android:layout_marginLeft="@dimen/spacing_8"
                android:layout_marginRight="@dimen/spacing_8"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:src="@mipmap/like" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>